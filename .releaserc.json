{
  "branches": [
    "main",
    { "name": "+([0-9]).x", "range": "+([0-9]).x.x" },
    { "name": "next", "prerelease": "next" },
    { "name": "beta", "prerelease": "rc" },
    { "name": "dev", "prerelease": "nightly" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "config": {
          "writerOpts": {
            "mainTemplate": "./.github/templates/release-notes-template.hbs"
          }
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ./.github/scripts/prepare-release.js ${nextRelease.version} \"${nextRelease.notes}\" '${JSON.stringify(commits)}'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "target/release-assets/*", "label": "Distribution Files" },
          { "path": "changelogs/api/**", "label": "Changelog API Data" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pom.xml",
          "changelogs/",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
