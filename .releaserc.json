{
  "branches": [
    "main",
    { "name": "+([0-9]).x", "range": "+([0-9]).x.x" },
    { "name": "next", "prerelease": "next" },
    { "name": "beta", "prerelease": "rc" },
    { "name": "dev", "prerelease": "nightly" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ./.github/scripts/generate-changelog.mjs ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "target/release-assets/*", "label": "Distribution Files" },
          { "path": "changelogs/api/v*/changelog.json", "label": "Changelog API Data" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pom.xml",
          "changelogs/"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
