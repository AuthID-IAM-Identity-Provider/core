{
  "branches": [
    "main",
    { "name": "+([0-9]).x" },
    { "name": "next", "prerelease": "next" },
    { "name": "beta", "prerelease": "rc" },
    { "name": "dev", "prerelease": "nightly" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® New Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö°Ô∏è Performance Improvements" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "test", "section": "üß™ Tests" },
            { "type": "style", "section": "üé® Styles" },
            { "type": "docs", "section": "üìù Documentation" },
            { "type": "chore", "section": "‚öôÔ∏è Miscellaneous Chores", "hidden": true }
          ]
        },
        "notesFile": ".release-notes.tmp"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ./.github/scripts/prepare-release.js ${nextRelease.version} \"${nextRelease.notes}\" '${JSON.stringify(commits)}'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "target/release-assets/*", "label": "Distribution Files" },
          { "path": "changelogs/api/**", "label": "Changelog API Data" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pom.xml",
          "changelogs/",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
